<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/system_file.xsd">
    <system>
        <section id="pokeapi" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>PokeAPI Integration</label>
            <tab>general</tab>
            <resource>Akid_PokeApi::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="base_url" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>PokeAPI Base URL</label>
                    <comment>Default: https://pokeapi.co/api/v2/</comment>
                    <config_path>pokeapi/general/base_url</config_path>
                    <depends>
                        <field id="pokeapi/general/enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
